<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<display-name>resources</display-name>
	<filter>
		<filter-name>Drumbeat Protected</filter-name>
		<filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>fi.aalto.drumbeat.DrumbeatApplication</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.config.property.JSPTemplatesBasePath</param-name>
			<param-value>/WEB-INF/jsp</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.config.property.WebPageContentRegex</param-name>
			<param-value>/(resources|(WEB-INF/jsp))/.*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Drumbeat Protected</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>all</web-resource-name>
			<url-pattern>/protected/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>default</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>DRUMBEAT</auth-method>
	</login-config>
	<session-config>
		<session-timeout>525600</session-timeout>
		<cookie-config>
			<max-age>31536000</max-age>
		</cookie-config>
	</session-config>
	<security-role>
		<role-name>default</role-name>
	</security-role>
</web-app>